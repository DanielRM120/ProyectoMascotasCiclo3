@page
@model MascotaFeliz.App.Frontend.Pages.RegistroModel
@{
}

<section id="hero">

<h2>Registro</h2>
<form method="post">
    <input type="hidden" asp-for="Cliente.Id" />
    <div class="form-group">
        <label asp-for="Cliente.Nombres"></label>
        <input asp-for="Cliente.Nombres" class="form-control">
        <span class="text-danger" asp-validation-for="Cliente.Nombres"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Apellidos"></label>
        <input asp-for="Cliente.Apellidos" class="form-control">
        <span class="text-danger" asp-validation-for="Cliente.Apellidos"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.NumeroTelefono"></label>
        <input asp-for="Cliente.NumeroTelefono" class="form-control">
        <span class="text-danger" asp-validation-for="Cliente.NumeroTelefono"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Direccion"></label>
        <input asp-for="Cliente.Direccion" class="form-control">
        <span class="text-danger" asp-validation-for="Cliente.Direccion"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cliente.Correo"></label>
        <input asp-for="Cliente.Correo" class="form-control">
        <span class="text-danger" asp-validation-for="Cliente.Correo"></span>
    </div>
    <br>

    <button type="submit" class="btn btn-primary">Registrar</button>

</form>
<a asp-page="../Index" class="btn-default">Regresar al Home </a>
</section>